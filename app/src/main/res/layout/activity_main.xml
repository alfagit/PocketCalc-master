<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taka.pocketcalc.MainActivity"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="copy blow to clipboard"
        android:id="@+id/buttonCopy"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textSize="35sp"
        android:id="@+id/textViewDisplay"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:background="#fcf5d4"
        android:layout_columnWeight="1.0"
        tools:ignore="HardcodedText"
        android:paddingEnd="5dp"
        android:paddingStart="5dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="←"
                android:textSize="35sp"
                android:id="@+id/buttonBS"
                android:layout_column="0"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="C"
                android:textSize="35sp"
                android:id="@+id/buttonC"
                android:layout_column="1"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="35sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="35sp"
                android:id="@+id/buttonAdd"
                android:layout_column="3"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="35sp"
                android:id="@+id/button7"
                android:layout_column="0"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:text="8"
                android:textSize="35sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="9"
                android:textSize="35sp"
                android:id="@+id/button9"
                android:layout_column="2"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="35sp"
                android:id="@+id/buttonSub"
                android:layout_column="3"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="35sp"
                android:id="@+id/button4"
                android:layout_column="0"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="35sp"
                android:id="@+id/button5"
                android:layout_column="1"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="35sp"
                android:id="@+id/button6"
                android:layout_column="2"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="*"
                android:textSize="35sp"
                android:id="@+id/buttonMul"
                android:layout_column="3"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="35sp"
                android:id="@+id/button1"
                android:layout_column="0"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="35sp"
                android:id="@+id/button2"
                android:layout_column="1"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="35sp"
                android:id="@+id/button3"
                android:layout_column="2"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="/"
                android:textSize="35sp"
                android:id="@+id/buttonDiv"
                android:layout_column="3"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="35sp"
                android:id="@+id/button0"
                android:layout_column="0"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonEq"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:text="="
                android:textSize="35sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/buttonSgn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="±"
                android:textSize="35sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="35sp"
                android:id="@+id/buttonMod"
                android:layout_column="3"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_s"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="音声入力" />

        <Button
            android:id="@+id/button_tts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="音声出力" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="35sp"
            tools:ignore="ButtonStyle,HardcodedText" />


    </LinearLayout>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="TextView" />

</LinearLayout>
